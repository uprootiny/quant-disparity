  "hypotheses": {
    "H1": {
      "id": "H1",
      "name": "Disparity Existence",
      "statement": "INT4 quantization degrades low-resource languages more than high-resource languages",
      "prediction": "D_LR / D_HR > 1.5",
      "null_hypothesis": "D_LR / D_HR = 1.0",
      "test": "Two-sample t-test, Cohen's d",
      "status": "pending",
      "experiments": ["EXP-001", "EXP-002"],
      "references": ["Ahia2021"]
    },
    "H2": {
      "id": "H2",
      "name": "Kurtosis-Degradation Correlation",
      "statement": "Effective kurtosis of activated weight distribution predicts quantization sensitivity",
      "prediction": "r(κ_eff, D) significant, |r| > 0.7",
      "null_hypothesis": "r(κ_eff, D) = 0",
      "test": "Pearson correlation, permutation test",
      "status": "pending",
      "experiments": ["EXP-003"],
      "references": ["Banner2019"]
    },
    "H3": {
      "id": "H3",
      "name": "Fertility-Degradation Correlation",
      "statement": "Token fertility (tokens/words) predicts quantization degradation",
      "prediction": "r(fertility, D) > 0.7",
      "null_hypothesis": "r(fertility, D) = 0",
      "test": "Pearson/Spearman correlation",
      "status": "pending",
      "experiments": ["EXP-001", "EXP-002"],
      "references": ["Acs2019", "Rust2021"]
    },
    "H4": {
      "id": "H4",
      "name": "Rate-Distortion Scaling",
      "statement": "Degradation follows rate-distortion theory: D ∝ 2^{-B/2}",
      "prediction": "slope(log D vs B) ≈ -0.347 = -ln(2)/2",
      "null_hypothesis": "No systematic relationship",
      "test": "Linear regression on log-scale",
      "status": "pending",
      "experiments": ["EXP-004"],
      "references": ["Shannon1948", "Cover2006"]
    },
    "H5": {
      "id": "H5",
      "name": "Gateway Layer Criticality",
      "statement": "Layers 0 and final layer are disproportionately important for LR languages",
      "prediction": "Protecting L0+L_final reduces disparity by >30%",
      "null_hypothesis": "All layers equally important",
      "test": "Layer ablation study",
      "status": "pending",
      "experiments": ["EXP-005"],
      "references": ["Elhage2022"]
    },
    "H6": {
      "id": "H6",
      "name": "LA-ACIQ Effectiveness",
      "statement": "Per-language optimal clipping reduces disparity",
